#include <iostream>
using namespace std;

float areat (float b, float h);

int main()
{
    float base, altura;
    cout<<"Ingresar la base: ";
    do{
        cin>>base;
    }while (base <=0);
    cout<<"Ingresar la altura: ";
    do{
        cin>>altura;
    }while (altura<=0);
    
    cout<<"El area es: "<<areat(base, altura);
    
    return 0;
}

float areat (float b, float h)
{
    float aux;
    aux=(b*h)/2;
    return aux;
}
